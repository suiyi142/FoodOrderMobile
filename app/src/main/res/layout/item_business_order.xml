<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_business_order_u_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_receipt"
        android:layout_marginBottom="3dp"
        android:padding="10dp"
        android:text="用户id" />

    <TextView
        android:id="@+id/tv_business_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/bt_receipt"
        android:padding="10dp"
        android:text="￥10"
        android:textColor="@color/title_red"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/button_bg"
        android:text="接单"
        android:textColor="#fff" />

</RelativeLayout>
